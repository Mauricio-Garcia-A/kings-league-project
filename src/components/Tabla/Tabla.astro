---
const response = await fetch('https://kings-league-api.garcia-mauricio-ariel.workers.dev/teams')
const teams = await response.json()

---



<table class="fixed_headers">
    <thead>
      <tr>
        <th>POS</th>
        <th>EQUIPO</th>
        <th>V</th>
        <th>D</th>
      </tr>
    </thead>
    <tbody>
        { teams.map((team, i )=>{
            return 	<tr>
                        <td>{i+1}</td>
                        <td>
                            <img src={team.image} alt={`img-${team.id}`} />
                            <span>{team.name}</span>
                        </td>
                        <td>2</td>
                        <td>3</td>
                    </tr>
        })}
    </tbody>
  </table>


  <style>

    img {
		width: 30px;
    }
    .fixed_headers {
        border: 1px solid black;
        border-radius: 5px;
        width: 300px;

    }
    .fixed_headers thead {
        background: #222;
        color: white;
        border-radius: 20px 20px 0px 0px ;
        border: none;

    }

</style>